                            <i class="fa-solid fa-caret-down marginl"></i>
                            <div class="DM">
                                <ul style="padding: 0;" class="DM-list">
                                    <asp:DataList ID="DLDM" runat="server">
                                        <ItemTemplate>
                                            <a href="TruyenPage.aspx?ID=DM<%#Eval("MaDM") %>" style="text-decoration: none;">
                                                <div class="DM-it">
                                                    <%#Eval("TenDM") %>
                                                </div>
                                            </a>
                                        </ItemTemplate>
                                    </asp:DataList>
                                </ul>
                            </div>
                        </div>
