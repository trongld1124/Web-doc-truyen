                                <ul class="TL-list" style="padding: 0;">
                                    <asp:DataList ID="DLTL" runat="server">
                                        <ItemTemplate>
                                            <a href="TruyenPage.aspx?ID=TL<%#Eval("MaTL") %>" style="text-decoration: none;">
                                                <div class="DM-it">
                                                    <%#Eval("TenTL") %>
                                                </div>
